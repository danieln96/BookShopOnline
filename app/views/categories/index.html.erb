<h2 align='center'>Lista kategorii</h2>
<% @categories.each do |category| %>
    <div class="panel panel-info">
      <div class="panel-heading">
          <h4>
              <span class="label label-warning"><%= link_to category.name, category_path(category) %>  </span>
          </h4>
      </div>
      <div class="panel-body">
          <% category.books.each do |book| %>
          <ul class="list-group">
              <li class="list-group-item"><%= link_to "#{book.title}", book_path(book) %></li>
          </ul>
          <% end %>
      </div>
    </div>
<% end %>