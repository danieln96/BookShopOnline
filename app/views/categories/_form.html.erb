<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <label>Tytuł</label>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "nazwa", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Dodaj książke", class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Anuluj i powróć do listy książek...", books_path %> ]
        </div>
    </div>
</div>